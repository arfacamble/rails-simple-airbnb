<div class="container">
  <h1>All Flats(<%= @flats.size %>)</h1>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="flat-card">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <div class="d-flex">
          <i class="far fa-user"></i>
          <p><%= flat.number_of_guests %></p>
          <i class="far fa-money-bill-alt"></i>
          <p><%= flat.price_per_night %></p>
        </div>
        <div class="d-flex justify-content-around">
          <%= link_to "More", flat_path(flat), class: "btn btn-outline-primary" %>
          <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-info" %>
          <%= link_to "Delete", flat_path(flat), method: :delete, class: "btn btn-outline-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
