<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar d-flex justify-content-between border-bottom mb-3">
      <h3><%= link_to "Simple Airbnb", flats_path %></h3>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary" %>
    </div>
    <%= yield %>
  </body>
</html>
